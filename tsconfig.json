{
    "compilerOptions": {
        "target": "es2021",
        "lib": [
            "es2021",
            "dom"
        ],
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "paths": {},
        "types": [
            "node"
        ],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/*.ts"    
    ],
    "exclude": [
        "node_modules",
        "./node_modules/",
        "./node_modules/*",
    ],
}
